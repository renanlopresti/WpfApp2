<Window x:Class="WpfApp2.Entidades.AddBiker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Entidades"
        mc:Ignorable="d"
        Title="AddBiker" Height="518" Width="402">
    <Grid>
        <StackPanel Margin="38,95,38,43">
            <Label Content="Adicionar Competidor                " Width="174" FontSize="14" FontWeight="Bold"/>
            <Label Content="Nome:"/>
            <TextBox TextWrapping="Wrap" Text="{Binding NomeCompleto}" Width="120" Margin="0,0,0,10"/>
            <Label Content="Idade:"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Idade}" Width="120" Margin="0,0,0,10"/>
            <Label Content="Cidade:" HorizontalAlignment="Left"/>
            <TextBox TextWrapping="Wrap" Text="{Binding Cidade}" Width="120" Margin="0,0,0,15"/>
            <Button Content="Adicionar" RenderTransformOrigin="0.502,4.812" Width="219" Click="bnt_salvar"/>
        </StackPanel>

    </Grid>
</Window>
